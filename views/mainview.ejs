<!DOCTYPE html>
<html>
	<head>
		<title>Class</title>

		<link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/KaTeX/0.7.1/katex.min.css">
		<script src="https://cdnjs.cloudflare.com/ajax/libs/KaTeX/0.9.0/katex.min.js"></script>

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/monokai-sublime.min.css">
		<script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>

		<link rel="stylesheet" href="https://cdn.quilljs.com/1.3.6/quill.snow.css">
		<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

		<script src="https://www.youtube.com/iframe_api"></script>

		<link rel="stylesheet" href="/stylesheets/index.css">
		<link rel="stylesheet" href="/stylesheets/mainview.css">
		<script src="/scripts/mainview.js"></script>
	</head>

	<body>
		<div id="main-container">
			<div id="navs">
				<% if (utype == "instructor") { %>
					<a class="nav-item" href="/create">Add video to a class</a>
				<% } %>
				<div class="nav-item dropdown" id="classes">
				<a class="dropbtn" href="/">Class</a>
				<div class="drop-content">
					<% for (let c of classes) { %>
						<a href=<%= "/class/" + c.classid %>><%= c.classname %></a>
					<% } %>
				</div>
				</div>

				<div class="nav-item dropdown" id="videos">
				<a class="dropbtn" href="/">Videos</a>
				<div class="drop-content">
					<% for (let v of viewClass.vlink) { %>
						<input type="button" data-vid="<%=v%>"><%=v%></input>
					<% } %>
				</div>
				</div>

                <div class="nav-item dropdown" id="logout">Logout</div>
			</div>
			<div id="main-content" data-vid="NgbK43jB4rQ">
					<h1 id="classname"><%= viewClass.classname %></h1>
					<input id="classid" type="hidden" value=<%= viewClass.classid %>>
					<div id="video-container"></div>
					<div id="subs"></div>
				</div>
			</div>
			<div id="side-container">
			<div id="tabs">
				<div class="tab-item" id="notes">Notes</div>
				<!-- <div class="tab-item" id="discussion">Discussion</div> -->
				<div class="tab-item" id="comments">Comments</div>
			</div>
			<div id="side-content">
				<div class="tab-info" id="notes-info">
					<div id="notes-editor"></div>
					<button id="notes-submit" onclick="saveNote()">Save Note</button>
            <div id="notes-display">
              <div class="notes-section"></div>
              <div class="notes-section"></div>
              <div class="notes-section"></div>
              <div class="notes-section"></div>
            </div>
				</div>
				<!-- <div class="tab-info" id="discussion-info"></div> -->
				<div class="tab-info" id="comments-info">
					<div id="comments-editor"></div>
					<button id="comments-submit">Submit Comment</button>
                    <div id="comments-display">
                        <div class="comments-section"></div>
                        <div class="comments-section"></div>
                        <div class="comments-section"></div>
                        <div class="comments-section"></div>
                        <div class="comments-section"></div>
                    </div>
				</div>
			</div>
		</div>
	</body>
</html>
