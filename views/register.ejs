        <div id="container">

            <div id="content-container">
                <div class="logo-container">
                    <img id="logo" src="/img/placeholder_logo.png">
                </div>
                <div class="logo-container">
                    <div id="logo-text">
                        Create an Account
                    </div>
                </div>
            </div>

            <form action="/register" method="post" id="account-container">
                <div class="create-container">
                    <div class="fillin-box">
                        <input class="fillin-input" type="text" name="email" placeholder="Email" required>
                    </div>
                </div>
                <div class="create-container">
                    <div class="fillin-box">
                        <input class="fillin-input" type="password" name="password" placeholder="Password" required>
                    </div>
                </div>
                <div class="create-container">
                    <div id="button-text">
                        You are a
                    </div>
                    <div id="button-container">
                        <div class="button-choice">
                            <label for="choice1">
                                <input type="radio" name="student_or_instructor" id="choice1" value="student" required> Student
                            </label>
                        </div>
                        <div class="button-choice">
                            <label for="choice2">
                                <input type="radio" name="student_or_instructor" id="choice2" value="instructor"> Instructor
                            </label>
                        </div>
                    </div>
                </div>
                <div class="create-container">
                    <button id="account-creator" type="submit"> Register </button>
                </div>
                <div class="create-container">
                    <div id="login-account">
                        Already have an account?  <a href="/login" style="text-decoration: none"> Login here </a>
                    </div>
                </div>
            </form>

        </div>
	
  </body>
